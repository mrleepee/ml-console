{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "http:default",
    "http:allow-fetch",
    "http:allow-fetch-send",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://httpbin.org/**" },
        { "url": "http://localhost:*/**" },
        { "url": "https://localhost:*/**" },
        { "url": "http://**" },
        { "url": "https://**" }
      ]
    }
  ]
}
